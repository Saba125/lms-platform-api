generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  @@map("users")
}

model Movie {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  year      String
  genre     String
  director  String
  actors    String[]
  plot      String
  rating    String
  imageUrl  String   @unique
  createdAt DateTime @default(now()) // Automatically sets the creation time
  updatedAt DateTime @updatedAt

  @@map("movies")
}
